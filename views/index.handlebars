<main class="container-fluid background">

<div class="row">
  <div class="col-md-12 burg-header">
    <h1>Burgers</h1>
  </div>
</div>

<div class="row justify-content-center">
<div class="col-md-3 burg-list">
<h2>Burgers That Need Eating</h2>

<ul>
  {{#each burgers}}
  {{#unless devoured}}
  {{this.burger_name}}
  {{> burgers/burger-block devoured=true}}
  {{/unless}}
  {{/each}}
</ul>
</div>

<div class="col-md-3 burg-list">
<h2>Burgers Devoured!</h2>

<ul>
  {{#each burgers}}
  {{#if devoured}}
  {{this.burger_name}}
  {{> burgers/burger-block devoured=false}}
  {{/if}}
  {{/each}}
</ul>
</div></div>

<div class="row justify-content-center">
  <div class="col-md-3">
    <div class="row">
  <div class="col-md-12 burg-form">
<h2>Add A Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Intact
  </div>

  <button type="submit">Burger Me</button>
</form>
</div></div></div></div></div>